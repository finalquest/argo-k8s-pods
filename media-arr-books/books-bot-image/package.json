{
  "name": "books-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Telegram bot para buscar y descargar libros de la Biblioteca Secreta",
  "main": "index.js",
  "scripts": {
    "start": "node --loader ts-node/esm index.js",
    "test": "node --experimental-vm-modules --loader ts-node/esm node_modules/jest/bin/jest.js --no-cache",
    "test:watch": "node --experimental-vm-modules --loader ts-node/esm node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules --loader ts-node/esm node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules --loader ts-node/esm node_modules/jest/bin/jest.js --no-cache pagination.test.js",
    "test:integration": "node --experimental-vm-modules --loader ts-node/esm node_modules/jest/bin/jest.js --no-cache search-pagination-integration.test.js"
  },
  "dependencies": {
    "meilisearch": "^0.44.0",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.67.0",
    "nodemailer": "^6.9.0",
    "pino": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  }
}
